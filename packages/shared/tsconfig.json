{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "vitest/*": ["../xmc/node_modules/vitest/*"],
      "@hey-api/client-fetch": ["../xmc/node_modules/@hey-api/client-fetch"]
    },
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
