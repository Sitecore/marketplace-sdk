{
  "name": "@sitecore-marketplace-sdk/internal",
  "version": "0.1.0",
  "description": "Sitecore Marketplace SDK - Shared Utilities",
  "type": "module",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "tools"
  ],
  "scripts": {
    "test": "vitest",
    "build": "pnpm run clean && rollup -c",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "coverage": "vitest --coverage"
  },
  "author": {
    "name": "Sitecore Corporation"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sitecore/sitecore-marketplace-sdk"
  },
  "keywords": [
    "sitecore",
    "marketplace",
    "sdk",
    "shared"
  ],
  "dependencies": {
    "@hey-api/client-fetch": "0.8.3"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "0.66.5",
    "@sitecore-marketplace-sdk/client": "workspace:*",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@types/node": "^22.13.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.34.8",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.8",
    "@vitest/coverage-v8": "^3.0.6"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./tools/openapi-plugins/*": {
      "import": "./tools/openapi-plugins/*/index.ts",
      "types": "./tools/openapi-plugins/*/index.ts"
    }
  }
}
