{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "..",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "../shared/src/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "../shared/src/__tests__/**"]
}